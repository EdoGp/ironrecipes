<h1>Recipes</h1>
<div class="row">
  {{#each recipes}}
  {{> recipeCardPartial this}}
  {{/each}}
</div>
{{#if user}}
<div class="container row">
  <form class='recipe-update-info col s12' action="/api/v1/recipes" method="POST" enctype="multipart/form-data">
    <div class="row">
      <div class="input-field col s4 tooltipped" data-tooltip="Type a name for the recipe">
        <label for="name">Dish name</label>
        <input type="text" name="name">
      </div>
      <div class="input-field col s4">
        <select name="cousine">
          <option value="" disabled selected>Cousine</option>
          <option value="American">American</option>
          <option value="French">French</option>
          <option value="Thai">Thai</option>
          <option value="Latin">Latin</option>
        </select>
      </div>
      <div class="input-field col s4">
        <select name="type">
          <option value="" disabled selected>Dish type</option>
          <option value="Entree">Entree</option>
          <option value="Appetizer">Appetizer</option>
          <option value="Soup">Soup</option>
          <option value="Salad">Salad</option>
        </select>
      </div>
    </div>
    <div class="input-field">
      <label for="ingredients">Ingredients</label>
      <textarea name='ingredients' id="textarea1" class="materialize-textarea tooltipped"
        data-tooltip="Separate each ingredient with an enter"></textarea>
    </div>
    <div class="input-field">
      <label for="preparation">Preparation</label>
      <textarea name='preparation' id="textarea1" class="materialize-textarea tooltipped"
        data-tooltip="Separate each instruction with an enter"></textarea>
    </div>
    <div class="file-field input-field">
      <div class="btn blue-grey lighten-1">
        <span>Browse</span>
        <input type="file" name='image' />
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" name='image' type="text" placeholder="Upload file" />
      </div>
    </div>
    <input type="hidden" id="custId" name="custId" value="{{user._id}}">
    <div class="form-center-button">
      <button class="btn blue accent-3" type="submit">Create Recipe</button>
    </div>
  </form>
  {{/if}}

</div>
