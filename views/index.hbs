<section>
  <div class="slider">
    <ul class="slides">
      <li>
        <img src="/images/background-1.jpg">
        <div class="caption center-align slider-text">
          <h3>Ironrecipes</h3>
          <h5 class="light grey-text text-lighten-3">Keep all your recipes in a safe place</h5>
        </div>
      </li>
      <li>
        <img src="/images/background-2.jpg">
        <div class="caption center-align slider-text">
          <h5 class="light grey-text text-lighten-3">Create a user and add recipes</h5>
          <h6 class="light grey-text text-lighten-3">It is that simple</h6>
        </div>
      </li>
      <li>
        <img src="/images/background-3.jpg">
        <div class="caption center-align slider-text">
          <h3>Right Aligned Caption</h3>
          <h5 class="light grey-text text-lighten-3">Share your recipes with your friends</h5>
        </div>
      </li>
      <li>
        <img src="/images/background-4.jpg">
        <div class="caption center-align slider-text">
          <h3>This is our big Tagline!</h3>
          <h5 class="light grey-text text-lighten-3">Find new recipes yo cook with your friends</h5>
        </div>
      </li>
    </ul>
  </div>
</section>
<section>
  <h3>Entrees</h3>
  <div class='row'>
    {{#each entrees}}
    {{>recipeCardPartial this}}
    {{/each}}
  </div>
</section>
<section>
  <h3>Appetizers</h3>
  <div class="row">
    {{#each appetizers}}
    {{>recipeCardHorizontalPartial this}}
    {{/each}}
  </div>
</section>
<section>
  <h3>Soups and Salads</h3>
  <div class='row'>
    {{#each soupsAndSalads}}
    {{>recipeCardSmallPartial this}}
    {{/each}}
  </div>
</section>
