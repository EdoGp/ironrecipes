<h1>Messages Board</h1>

{{message}}
{{#if mUser}}
<div class="container">
  <form action="/messages" method="post">
    <div class="input-field col s6">
      <input type="text" name="topic">
      <label for="topic">Topic</label>
    </div>
    <div class="input-field">
      <label for="message">Message:</label>
      <textarea name='message' id="textarea1" class="materialize-textarea"></textarea>
    </div>
    <input type="hidden" id="custId" name="custId" value="{{user._id}}">
    <button class="btn" type="submit">Create Message Board</button>
  </form>
</div>
{{/if}}
