<h1>Messages Board</h1>

{{#if rUser}}
<div class="container">
  <form action="/messages" method="post">
    <div class="input-field col s6">
      <input type="text" name="topic">
      <label for="topic">Topic</label>
    </div>
    <div class="input-field">
      <label for="message">Message:</label>
      <textarea name='message' id="textarea1" class="materialize-textarea"></textarea>
    </div>
    <input type="hidden" name="reciever" value="{{rUser}}">
    <button class="btn" type="submit">Create Message Board</button>
  </form>
</div>
{{/if}}

<div class="container">
  <div class="collection">
    {{#each messages}}
    <div class="collection-item">
      {{this}}
      <h4>
        {{this.topic}}
      </h4>
      <span class='right-align'>
        {{this.createdAt}}
      </span>
      <a href="/messages/{{this._id}}">
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
          <i class="material-icons right">send</i>
        </button>
      </a>
    </div>
    {{/each}}
  </div>
</div>
