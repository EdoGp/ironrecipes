<div class="col s8 m4">
  <div class="card horizontal">
    <div class="card-image">
      <img src="{{images.[0]}}">
    </div>
    <div class="card-stacked">
      <div class="card-content">
        <ul>
          {{#each ingredientsList}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
      </div>
      <div class="card-action">
        <a href="/recipes/{{_id}}">Recipe Details</a>
        {{#if owner}}
        <a href="/api/v1/recipes/{{_id}}/delete" class='right-align'>
          <i class="material-icons delete-button">remove_circle</i>
        </a>
        {{/if}}
      </div>
    </div>
  </div>
</div>
